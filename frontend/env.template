# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_KEY=your-api-key-here

# Environment
REACT_APP_ENVIRONMENT=development

# Analytics (Optional)
REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX
REACT_APP_ENABLE_ANALYTICS=false

# Feature Flags
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_PARTICLE_EFFECTS=true
REACT_APP_ENABLE_SOUND_EFFECTS=false

# Performance
REACT_APP_CACHE_POEMS=true
REACT_APP_DEBOUNCE_DELAY=300

# UI Configuration
REACT_APP_THEME_TRANSITION_DURATION=500
REACT_APP_MAX_POEM_DISPLAY_LENGTH=1000

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API_RESPONSES=false

